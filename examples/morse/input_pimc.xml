<?xml version="1.0" encoding="utf-8"?>
<simulation>
  <type>pimc</type>
  <parameters>
    <units system="atomic"/>
    <beta>10</beta>
    <num_atoms>1</num_atoms>
    <num_dimensions>1</num_dimensions>
    <num_propagators>15</num_propagators>
    <mass>1</mass>
    <potential name = "Morse">
        <rmin>0</rmin>
        <alpha>0.426401</alpha>
        <D>2.75</D>
    </potential>
  </parameters>
  <propagators>
    <propagator name="G6" number="15"/>
  </propagators>
  <moves>
    <Translate>
      <length>1.75</length>
    </Translate>
    <BrownianBridge>
      <length>20</length>
      <attempts>5</attempts>
    </BrownianBridge>
  </moves>
  <monte_carlo>
    <num_ICs>100000</num_ICs>
    <num_blocks>10</num_blocks>
  </monte_carlo>
  <output each_node="No" each_block="No" progressive="Yes">
    <output_folder>pimc.beta1.G6.props15</output_folder>
    <phasespace histogram="Yes">Yes</phasespace>
    <estimators>
      <PotentialEnergy/>
      <KineticEnergy/>
      <VirialKineticEnergy/>
      <PositionCorrelation/>
    </estimators>
  </output>
  <logging>
    <file>
      <master level="info"/>
      <others level="info"/>
    </file>
    <terminal>
      <master level="info"/>
      <others level="critical"/>
    </terminal>
  </logging>
</simulation>