<?xml version="1.0" encoding="utf-8"?>
<simulation>
  <type>pimc</type>
  <parameters>
    <units system="atomic">
      <temperature>1</temperature>
    </units>
    <temperature>10</temperature>
    <num_atoms>13</num_atoms>
    <num_dimensions>3</num_dimensions>
    <num_propagators>1</num_propagators>
    <mass>36785.3398414</mass>
    <potential name = "LennardJones">
      <rmin>5.83095</rmin>
      <epsilon>0.00011274</epsilon>
      <cutoff_radius>20.3418</cutoff_radius>
    </potential>
    <initial_configuration>Ne13_bohr.xyz</initial_configuration>
  </parameters>
  <propagators>
    <propagator name="G2" number="1"/>
  </propagators>
  <moves>
    <Translate>
      <length>1</length>
    </Translate>
  </moves>
  <monte_carlo>
    <num_ICs>10000</num_ICs>
    <num_blocks>10</num_blocks>
  </monte_carlo>
  <output each_node="No" each_block="Yes" progressive="Yes">
    <output_folder>Ne13.1mil.G2.props1</output_folder>
    <phasespace histogram="No">No</phasespace>
    <estimators>
      <PotentialEnergy/>
      <KineticEnergy/>
      <VirialKineticEnergy/>
      <PositionCorrelation/>
      <CV/>
    </estimators>
  </output>
  <logging>
    <file>
      <master level="info"/>
      <others level="info"/>
    </file>
    <terminal>
      <master level="info"/>
      <others level="critical"/>
    </terminal>
  </logging>
</simulation>
