<?xml version="1.0" encoding="utf-8"?>
<simulation>
  <type>pimc</type>
  <parameters>
    <units system="real"/>
    <temperature>10</temperature>
    <num_atoms>13</num_atoms>
    <num_dimensions>3</num_dimensions>
    <num_propagators>1</num_propagators>
    <mass>20.1797</mass>
    <potential name = "LennardJones">
      <rmin>3.085605857</rmin>
      <epsilon>0.070744</epsilon>
      <cutoff_radius>10.76441699</cutoff_radius>
    </potential>
    <initial_configuration>Ne13_angstrom.xyz</initial_configuration>
  </parameters>
  <propagators>
    <propagator name="G2" number="1"/>
  </propagators>
  <moves>
    <Translate>
      <length>0.5</length>
    </Translate>
  </moves>
  <monte_carlo>
    <num_ICs>10000</num_ICs>
    <num_blocks>10</num_blocks>
  </monte_carlo>
  <output each_node="No" each_block="Yes" progressive="Yes">
    <output_folder>Ne13.1mil.G2.props1</output_folder>
    <phasespace histogram="No">No</phasespace>
    <estimators>
      <PotentialEnergy/>
      <KineticEnergy/>
      <VirialKineticEnergy/>
      <PositionCorrelation/>
      <CV/>
    </estimators>
  </output>
  <logging>
    <file>
      <master level="info"/>
      <others level="info"/>
    </file>
    <terminal>
      <master level="info"/>
      <others level="critical"/>
    </terminal>
  </logging>
</simulation>
